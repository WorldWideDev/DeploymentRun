@model MainUser

<h1>Profile for @Model.FirstName @Model.LastName</h1>
<hr>
<h3>Orders:</h3>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Pizza Name</th>
            <th>Description</th>
            <th>Order Date</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
    @foreach(var order in Model.PizzasOrdered)
    {
        <tr>
            <td>@order.Pizza.Name</td>
            <td>@order.Pizza.Description</td>
            <td>@order.CreatedAt</td>
            <td>@order.Quantity</td>
        </tr>
    }
    </tbody>
</table>